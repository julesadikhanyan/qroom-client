{
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "outDir": "./dist",
        "noImplicitAny": true,
        "jsx": "react",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    },
    "exclude": [
        "node_modules"
    ]
}
